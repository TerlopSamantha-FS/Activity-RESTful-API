<form method="POST" action="/variants/{% if variant.id %}{{ variant.id }}{% endif %}">
    {% if variant.id %}
        <input type="hidden" name="id" value="{{ variant.id }}">
        {% endif %}
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="{{ variant.title }}"  />
    </div>
    <div>
		<label for="slug">Slug:</label>
		<input type="text" name="slug" id="slug" value="{{ variant.slug }}" />
	</div>
    <div>
		<label for="description">Variant Description:</label><br />
        <textarea name="description" id="description">{{ product.description ?? '' }}</textarea>
	</div>
    <div>
        <label for="price">price:</label>
        <input type="number" name="price" id="price" value="{{ variant.price }}"  />
    </div>
    <div>
		<label for="inventory">Available Inventory:</label>
		<input type="checkbox" name="is_published" id="is_published" value="1" {{ product.is_published ? 'checked' : '' }} />
	</div>
    <div>
    <label>Product:</label>
    <select name="productId" >
            {% for product in products %}
                <option 
                    value="{{ product.id }}"
                    {% if product.id == variant.productId %}selected="selected"{% endif %}>
                    {{  product.title }}
                </option>
            {% endfor %}
    </select>
    </div>
     <div>
        <input type="submit" type="submit" />
    </div>
</form>