{% extends 'layouts/base.twig' %}

{% block main_content %}
    <h2>About {{ variant.title }}</h2>
    <ul style="list-style: none;">
       
       <li>
            <label>Product Id: </label> {{ variant.id }}
        </li>
        <li>    
            <label>Title: </label> {{ variant.title }}
        </li>
        <li>
			<label>Slug: </label> {{ variant.slug }}
		</li>
        <li>
			<label>Description: </label> {{ variant.Description }}
		</li>
		<li>
			<label>Price: </label> {{ variant.price }}
		</li>
        <li>
			<label>Inventory: </label> {{ variant.inventory }}
		</li>
         
    </ul>
    <p>
        <a href="/variants/{{ variant.id }}/edit">Edit</a> | <a href="/variants/{{ variant.id }}/delete">Delete</a>
    </p>
    
   
{% endblock %}
